<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="160dp"
             android:background="@color/navigation_drawer_header"
             android:orientation="vertical"
             android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_drawer_overlay"/>

    </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dialog.margin.l"
            android:paddingEnd="@dimen/dialog.margin.xl"
            android:paddingLeft="@dimen/dialog.margin.xl"
            android:paddingRight="@dimen/dialog.margin.xl"
            android:paddingStart="@dimen/dialog.margin.xl"
            android:paddingTop="@dimen/dialog.margin.l"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/splash_image_view_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/vd_splash_logo"/>

            <ImageView
                android:id="@+id/splash_image_view_name"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/favicoin"/>

        </LinearLayout>

</FrameLayout>