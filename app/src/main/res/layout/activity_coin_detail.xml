<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.lupinemoon.favicoin.presentation.ui.features.coindetail.CoinDetailViewModel"/>

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include layout="@layout/toolbar"/>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/coin_detail_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fillViewport="true"
                android:scrollbars="vertical"
                android:visibility="visible">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/coin_detail_parent_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <FrameLayout
                            android:id="@+id/coin_detail_image_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog.margin.xl"
                            android:background="@color/color_primary_dark">

                            <com.lupinemoon.favicoin.presentation.widgets.transitionimageview.TransitionImageView
                                android:id="@+id/coin_image_view"
                                android:layout_width="@dimen/coin_detail_image_size"
                                android:layout_height="@dimen/coin_detail_image_size"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/dialog.margin.l"
                                android:background="@color/transparent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_placeholder"
                                android:transitionName="@string/shared_image"
                                app:loadCoinImage="@{viewModel}"
                                app:tiv_rounding="0"/>

                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/coin_detail_body_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dialog.margin.l"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/parent_container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:fitsSystemWindows="false"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dialog.margin.m">

                                    <TextView
                                        android:id="@+id/coin_detail_name_text_view"
                                        style="@style/TextRegular.Field.Large"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:ellipsize="end"
                                        android:gravity="start|left"
                                        android:maxLines="1"
                                        android:maxWidth="@dimen/coin_detail_name_max_width"
                                        android:paddingBottom="@dimen/dialog.margin.s"
                                        android:text="@{viewModel.name}"
                                        android:textColor="@color/grey_33"
                                        android:textSize="@dimen/text.size.l"
                                        app:minTextSize="@dimen/text.size.l"/>

                                    <com.lupinemoon.favicoin.presentation.widgets.autofit.AutofitTextView
                                        android:id="@+id/coin_detail_separator_text_view"
                                        style="@style/TextRegular.Field.Large"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/coin_detail_name_text_view"
                                        android:layout_toRightOf="@id/coin_detail_name_text_view"
                                        android:gravity="start|left|bottom"
                                        android:paddingBottom="@dimen/dialog.margin.s"
                                        android:text="@string/separator_name_symbol"
                                        android:textColor="@color/grey_33"
                                        app:minTextSize="@dimen/text.size.s"/>

                                    <com.lupinemoon.favicoin.presentation.widgets.autofit.AutofitTextView
                                        android:id="@+id/coin_detail_symbol_text_view"
                                        style="@style/TextLight.Field.Large"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dialog.margin.m"
                                        android:layout_marginStart="@dimen/dialog.margin.m"
                                        android:layout_toEndOf="@id/coin_detail_separator_text_view"
                                        android:layout_toRightOf="@id/coin_detail_separator_text_view"
                                        android:gravity="start|left|bottom"
                                        android:maxLines="1"
                                        android:paddingBottom="@dimen/dialog.margin.s"
                                        android:text="@{viewModel.symbol}"
                                        android:textColor="@color/grey_33"
                                        app:minTextSize="@dimen/text.size.s"/>

                                </RelativeLayout>

                                <View
                                    android:layout_width="80dp"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="@dimen/dialog.margin.m"
                                    android:layout_marginTop="@dimen/dialog.margin.m"
                                    android:background="@color/color_accent"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/dialog.margin.m"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/coin_detail_rank_label"
                                        style="@style/TextRegular.Field.ListItemLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/rank_label"/>

                                    <TextView
                                        android:id="@+id/coin_detail_rank_text_view"
                                        style="@style/TextRegular.Field.ListItemValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@{viewModel.rank}"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_margin="@dimen/dialog.margin.l"
                                    android:background="@color/grey_ee"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/dialog.margin.m"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/coin_detail_price_usd_label"
                                        style="@style/TextRegular.Field.ListItemLabel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/price_usd_label"/>

                                    <TextView
                                        android:id="@+id/coin_detail_price_usd_text_view"
                                        style="@style/TextRegular.Field.ListItemValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@{viewModel.priceUsd}"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_margin="@dimen/dialog.margin.l"
                                    android:background="@color/grey_ee"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/coin_detail_favourite_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> viewModel.onFavouriteClick()}"
                        android:tint="@color/white"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:layout_anchor="@id/coin_detail_image_container"
                        app:layout_anchorGravity="bottom|right|end"
                        app:rippleColor="@color/fab_ripple_light"
                        app:srcCompat="@drawable/vd_star"/>

                </android.support.design.widget.CoordinatorLayout>

            </android.support.v4.widget.NestedScrollView>

            <include
                android:id="@+id/no_network_layout"
                layout="@layout/fragment_no_network"
                android:visibility="gone"/>

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>